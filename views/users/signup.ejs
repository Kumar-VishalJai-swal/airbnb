<% layout("/layouts/boilerplate") %>
<div class="row">
  <div class="col-6 offset-2 mt-3">
   
    <h3>SignUp</h3>
    <form method="POST" action="/signup" novalidate class="needs-validation">
     <div class="mb-3">
      <label for="username" class="form-lable">usernname*</label>
      <input name="username" placeholder="" type="text" class="form-control" required />
      <div class="invalid-feedback">username is required</div>
     </div>

    <div class="mb-3">
        <label for="email" class="form-lable">email*</label>
        <input name="email" placeholder="" type="email" class="form-control" required />
        <div class="invalid-feedback">email is required</div>
    </div>

    <div class="mb-3">
        <label for="password" class="form-lable">password*</label>
        <input name="password" placeholder="" type="password" class="form-control" required />
        <div class="invalid-feedback">password is required</div>
    </div>

    <button class="btn-danger">signup</button>


    </form>
  </div>
</div>
 
